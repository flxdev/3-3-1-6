extends _layout

block title
	title Catalog

block content
	include includes/_header
	include includes/_menu
	.wrapper
		.content.content-project
			a.logo(href="/")
			ul.breadcrumbs
				li
					a.home.breadcrumbs-item(href="#")
						div
							<svg viewBox="0 0 20 22.1" xmlns="http://www.w3.org/2000/svg"><path d="m10.04767,0.04746l-9.996,9l0,13l7.996,0l0,-6l4.004,0l0,6l8,0l0,-13l-10.004,-9zm8.008,20l-4.008,0l0,-6l-7.996,0l0,6l-4.004,0l0,-10.172l8,-7l8.008,7l0,10.172z"/></svg>
				li
					a.breadcrumbs-item(href="#")
						span Catalog
			.gallery-pagination
				a(href="#" class="pagination-item pagination-item_left")
					div
						<svg viewBox="0 0 31 21" xmlns="http://www.w3.org/2000/svg"><path id="svg_1" d="m0.5,0.5l13.4875,0l0,8.43764l-13.4875,0l0,-8.43764z" stroke-miterlimit="10" fill="none" clip-rule="evenodd" fill-rule="evenodd"/>  <path id="svg_3" d="m17.05921,0.5l13.44079,0l0,8.43626l-13.44079,0l0,-8.43626z" stroke-miterlimit="10" fill="none" clip-rule="evenodd" fill-rule="evenodd"/><path id="svg_4" d="m17.05467,12.06511l13.44533,0l0,8.43489l-13.44533,0l0,-8.43489z" stroke-miterlimit="10" fill="none" clip-rule="evenodd" fill-rule="evenodd"/><path id="svg_5" d="m0.5,12.0125l13.4875,0l0,8.4875l-13.4875,0l0,-8.4875z" stroke-miterlimit="10" fill="none" clip-rule="evenodd" fill-rule="evenodd"/></svg>
				a(href="#" class="pagination-item pagination-item_right")
					div
						<svg viewBox="0 0 31 21" xmlns="http://www.w3.org/2000/svg"><path id="svg_1" d="m0.5,0.5l13.39759,0l0,20l-13.39759,0l0,-20z" stroke-miterlimit="10" fill="none" clip-rule="evenodd" fill-rule="evenodd"/><path id="svg_2" d="m17.16265,0.5l13.33735,0l0,20l-13.33735,0l0,-20z" stroke-miterlimit="10" fill="none" clip-rule="evenodd" fill-rule="evenodd"/></svg>
			.content-left.content-side
				.projects
					.projects-inner
						.projects-title Catalog
						.projects-subtitle Sort by:  
						.projects-descr
							.project-sorting
								- var curr = "All projects"
								mixin sort(sort, name)
									button.sort(class={active: name === curr} type="button" data-filter=sort)
										span #{name}
								+sort("*", "All projects")
								+sort(".houses", "Houses")
								+sort(".interiors", "Interiors")
								+sort(".layouts", "Layouts")
			.content-right.content-side
				.projects-gallery
					.scroller-gallery.scroller-gallery__project
						.scroller-container#scroll-container
							ul.grid.grid-sort
								mixin gridItem(link, hash, name, area, price)
									li(class=hash)
										a
											.image__cover
												img(src=link)
											.projects-hash
												span(class="hash-item") ##{hash}
											.descr
												.name #{name}
												.prop
													.prop-sq #{area}m
														sup 2
													.prop-price #{price}$
								+gridItem("img/grid/grid-1.jpg", "layouts", "House#1", "105", "2 500")
								+gridItem("img/grid/grid-1.jpg", "interiors", "Interior#1", "53", "3 000")
								+gridItem("img/grid/grid-1.jpg", "houses", "House#1", "205", "4 000")
								+gridItem("img/grid/grid-1.jpg", "houses", "House#1", "105", "2 500")
								+gridItem("img/grid/grid-1.jpg", "layouts", "Interior#1", "53", "3 000")
								+gridItem("img/grid/grid-1.jpg", "houses", "House#1", "205", "4 000")
								+gridItem("img/grid/grid-1.jpg", "layouts", "House#1", "105", "2 500")
								+gridItem("img/grid/grid-1.jpg", "interiors", "Interior#1", "53", "3 000")
								+gridItem("img/grid/grid-1.jpg", "houses", "House#1", "205", "4 000")
								+gridItem("img/grid/grid-1.jpg", "houses", "House#1", "105", "2 500")
								+gridItem("img/grid/grid-1.jpg", "layouts", "Interior#1", "53", "3 000")
								+gridItem("img/grid/grid-1.jpg", "houses", "House#1", "205", "4 000")
								+gridItem("img/grid/grid-1.jpg", "houses", "House#1", "105", "2 500")
								+gridItem("img/grid/grid-1.jpg", "interiors", "Interior#1", "53", "3 000")
								+gridItem("img/grid/grid-1.jpg", "houses", "House#1", "205", "4 000")
								+gridItem("img/grid/grid-1.jpg", "houses", "House#1", "105", "2 500")
								+gridItem("img/grid/grid-1.jpg", "interiors", "Interior#1", "53", "3 000")
								+gridItem("img/grid/grid-1.jpg", "layouts", "House#1", "205", "4 000")
								+gridItem("img/grid/grid-1.jpg", "houses", "House#1", "105", "2 500")
								+gridItem("img/grid/grid-1.jpg", "interiors", "Interior#1", "53", "3 000")
								+gridItem("img/grid/grid-1.jpg", "layouts", "House#1", "205", "4 000")

					script(type='text/javascript').
						$(window).on("load resize", function(){
							$(heightScrollContainer)
						});
						$(scrollbar)
						$(iso)
		
		include includes/_pagination
		include includes/_footer
	include includes/_modal-hash
	include includes/_modal
